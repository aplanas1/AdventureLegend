<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SavesFragment"
    android:background="@drawable/fondo_menu">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="#00FFFFFF"
        android:src="@drawable/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/redressed"
        android:text="Saves"
        android:textColor="@color/black"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/save1"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@id/save2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">
        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pepito el Cuchillas"
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hero1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/level1"/>
        <ImageView
            android:id="@+id/hero1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/link"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/level1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LVL 5"
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/turn1"
            app:layout_constraintEnd_toStartOf="@+id/gold1"
            app:layout_constraintStart_toEndOf="@+id/hero1"
            app:layout_constraintTop_toBottomOf="@+id/name1"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/gold1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="394 gold"
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/turn1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/level1"
            app:layout_constraintTop_toBottomOf="@+id/name1" />
        <TextView
            android:id="@+id/turn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TURN 2/5"
            android:fontFamily="@font/redressed"
            android:textColor="#603C2A"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hero1"
            app:layout_constraintTop_toBottomOf="@id/level1"
            android:layout_marginRight="80dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/save2"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toTopOf="@id/save3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save1">
        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hero2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/level2"/>
        <ImageView
            android:id="@+id/hero2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nada"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/level2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/turn2"
            app:layout_constraintEnd_toStartOf="@+id/gold2"
            app:layout_constraintStart_toEndOf="@+id/hero2"
            app:layout_constraintTop_toBottomOf="@+id/name2"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/gold2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/turn2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/level2"
            app:layout_constraintTop_toBottomOf="@+id/name2" />
        <TextView
            android:id="@+id/turn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/redressed"
            android:textColor="#B17D5B"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hero2"
            app:layout_constraintTop_toBottomOf="@id/level2"
            android:layout_marginRight="80dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/save3"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:background="@drawable/border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/save2">
        <TextView
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hero3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/level3"/>
        <ImageView
            android:id="@+id/hero3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nada"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/level3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/turn3"
            app:layout_constraintEnd_toStartOf="@+id/gold3"
            app:layout_constraintStart_toEndOf="@+id/hero3"
            app:layout_constraintTop_toBottomOf="@+id/name3"
            android:layout_marginRight="30dp"/>
        <TextView
            android:id="@+id/gold3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/redressed"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/turn3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/level3"
            app:layout_constraintTop_toBottomOf="@+id/name3" />
        <TextView
            android:id="@+id/turn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/redressed"
            android:textColor="#B17D5B"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/hero3"
            app:layout_constraintTop_toBottomOf="@id/level3"
            android:layout_marginRight="80dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
